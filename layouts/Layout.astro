---
export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "Miami's #1 AI chatbot agency. 24/7 lead generation, automated CRM, instant responses. From $2,500. 100+ businesses automated. Setup in 2 weeks.",
